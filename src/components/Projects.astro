---
import ProjectImage from './ProjectImage.astro';

const projects = [
  {
    title: "Big Data Architecture for Product Reputation Monitoring",
    period: "10/2023 - Present",
    organization: "Mohamed VI Polytechnic University - College of Computing",
    description: "A comprehensive big data solution for monitoring and analyzing product reputation across multiple platforms.",
    details: [
      "Acquisition of data from various sources, including web scraping for Amazon product information, extracting comments from product videos on YouTube using the YouTube API, and obtaining Amazon reviews from Kaggle",
      "Design and orchestration of the architecture using tools such as Airflow, Apache Spark, Apache Kafka, etc",
      "Fine-tuning of open-source Language Model Models (LLMs) such as BERT and DistilBERT for high-accuracy sentiment analysis",
      "Development of a visualization web application using Streamlit and deployment of the architecture on the cloud"
    ],
    tech: ["Apache Spark", "Kafka", "BERT", "Streamlit"],
    image: "/big-data-architecture.png",
    color: "from-blue-500 to-purple-500"
  },
  {
    title: "MLOps for COVID-19 Detection",
    period: "04/2023 - 07/2023",
    organization: "Mohamed VI Polytechnic University - Africa Business School",
    description: "Implementation of MLOps practices for automated COVID-19 detection from X-ray images.",
    details: [
      "Utilization of image data preprocessing methods and data augmentation techniques",
      "Application of Transfer Learning for model building and comparison (VGG16, DenseNet, ResNet, InceptionV3, ...)",
      "Implementation of model tracking technologies such as MLflow and Ngrok tunnel for result visualization and comparison"
    ],
    tech: ["MLflow", "Transfer Learning", "PyTorch", "MLOps"],
    image: "/mlops-cycle.png",
    color: "from-green-500 to-blue-500"
  }
];
---

<section id="projects" class="py-20">
  <div class="container mx-auto px-6">
    <h2 class="text-5xl font-bold text-center mb-16 gradient-text" data-aos="fade-up">Featured Projects</h2>
    
    <div class="space-y-32">
      {projects.map((project, index) => (
        <div class={`flex flex-col lg:flex-row gap-12 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
          <div class="lg:w-1/2" data-aos={index % 2 === 0 ? "fade-right" : "fade-left"}>
            <div class="relative group">
              <div class="absolute -inset-1 bg-gradient-to-r from-primary to-secondary rounded-lg blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
              <div class="relative glass-card p-1">
                <img 
                  src={project.image} 
                  alt={project.title}
                  class="rounded-lg w-full h-auto"
                />
              </div>
            </div>
          </div>
          
          <div class="lg:w-1/2 space-y-6" data-aos={index % 2 === 0 ? "fade-left" : "fade-right"}>
            <div class="space-y-4">
              <h3 class="text-3xl font-bold gradient-text">{project.title}</h3>
              <p class="text-gray-300 text-lg">{project.description}</p>
              <p class="text-gray-400">{project.organization} | {project.period}</p>
            </div>
            
            <div class="space-y-4">
              {project.details.map(detail => (
                <div class="flex items-start space-x-3">
                  <i class="fas fa-check-circle text-indigo-400 mt-1"></i>
                  <p class="text-gray-300">{detail}</p>
                </div>
              ))}
            </div>
            
            <div class="flex flex-wrap gap-3">
              {project.tech.map(tech => (
                <span class={`px-4 py-2 rounded-full bg-gradient-to-r ${project.color} bg-opacity-10 text-white text-sm font-medium`}>
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section></content>